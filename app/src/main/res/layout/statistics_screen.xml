<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="18dp"
        android:text="С ботом"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="410dp"
        android:layout_height="67dp"
        android:background="#D9D9D9"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="140dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title1">

        <LinearLayout
            android:layout_width="123dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:id="@+id/winrateagainstbotpercent"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="45%"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/label1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="Побед"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gamesagainstbot"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gamesrateagainstbot"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="233"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/gamesagainstbotlabel"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="Игр сыграно"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/winsagainstbot"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-8dp"
            tools:layout_editor_absoluteY="322dp">

            <TextView
                android:id="@+id/winrateagainstbot"
                android:layout_width="123dp"
                android:layout_height="68dp"
                android:text="137"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/winslabelagainstbot"
                android:layout_width="123dp"
                android:layout_height="46dp"
                android:text="побед"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>