<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="486dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleStatistics">

        <LinearLayout
            android:layout_width="123dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:id="@+id/winrateagainstbotpercent"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="45%"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/label1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="Побед"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gamesagainstbot"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gamesrateagainstbot"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:text="233"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/gamesagainstbotlabel"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="Игр сыграно"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/winsagainstbot"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="-8dp"
            tools:layout_editor_absoluteY="322dp">

            <TextView
                android:id="@+id/winrateagainstbot"
                android:layout_width="123dp"
                android:layout_height="68dp"
                android:text="137"
                android:textAlignment="center"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/winslabelagainstbot"
                android:layout_width="123dp"
                android:layout_height="46dp"
                android:text="побед"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="18dp"
        android:text="С ботом"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarStats" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarStats"
        android:layout_width="410dp"
        android:layout_height="67dp"
        android:background="#D9D9D9"
        android:minHeight="?attr/actionBarSize"
        android:paddingLeft="16dp"
        android:paddingTop="6dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_back" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="166dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="166dp"
        android:text="С игроком"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="411dp"
        android:layout_height="314dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playerTitle"
                android:layout_width="373dp"
                android:layout_height="125dp"
                android:text="Игрок1"
                android:textAlignment="center"
                android:textSize="34sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:text="45%"
                        android:textAlignment="center"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Побед"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:text="133"
                        android:textAlignment="center"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Игр сыграно"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:text="60"
                        android:textAlignment="center"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Побед"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/cleanStat"
        android:layout_width="368dp"
        android:layout_height="51dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:text="Сбросить статистику"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <TextView
        android:id="@+id/titleStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="67dp"
        android:text="Статистика"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>